#!/bin/bash
# Post-removal script for mock-monitor

set -e

# Reload systemd daemon to remove service references
systemctl daemon-reload

# Clean up log directory (only if empty)
if [ -d "/var/log/mock-monitor" ]; then
    rmdir /var/log/mock-monitor 2>/dev/null || {
        echo "Note: /var/log/mock-monitor contains files and was not removed"
    }
fi

echo "Mock Monitor service removed successfully!"