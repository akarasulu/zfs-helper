#!/bin/bash
set -e

# prerm script for zfs-helper
# see: dh_installdeb(1)

case "$1" in
    remove|upgrade|deconfigure)
        # Stop and disable the service and socket before removal
        if [ -x /bin/systemctl ]; then
            systemctl stop zfs-helper.service >/dev/null 2>&1 || true
            systemctl stop zfs-helper.socket >/dev/null 2>&1 || true
            
            if [ "$1" = "remove" ]; then
                systemctl disable zfs-helper.socket >/dev/null 2>&1 || true
                systemctl disable zfs-helper.service >/dev/null 2>&1 || true
            fi
        fi
        ;;

    failed-upgrade)
        ;;

    *)
        echo "prerm called with unknown argument \`$1'" >&2
        exit 1
        ;;
esac

#DEBHELPER#

exit 0